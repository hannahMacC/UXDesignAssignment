<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Loch and Löyly</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UXDesignAssignment.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var currentPage = (ViewContext.RouteData.Values["Action"] ?? "").ToString();
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="/Images/Lock&LoylyLogoNoBackground.png" alt="Logo" style="height:100px; margin-right:6px;" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Home">Loch and Löyly</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "Home" ? "active" : "") text-dark" asp-area="" asp-controller="Home" asp-action="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "About" ? "active" : "") text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "SaunaFinder" ? "active" : "") text-dark" asp-area="" asp-controller="Home" asp-action="SaunaFinder">Find a Sauna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "Reviews" ? "active" : "") text-dark" asp-area="" asp-controller="Home" asp-action="Reviews">Sauna Reviews</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "FAQ" ? "active" : "") text-dark" asp-area="" asp-controller="Home" asp-action="FAQ">FAQs</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Loch and Löyly - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
